<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_screen_top_rel"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@drawable/background" >

    <ImageView
        android:id="@+id/top_bar_menu"
        android:layout_width="25dp"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:background="@drawable/menu_logo"
        android:clickable="true" />

    <TextView
        android:id="@+id/top_bar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/top_bar_menu"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/white" />

 <!--    <ImageView
        android:id="@+id/top_bar_settings"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_toLeftOf="@+id/top_bar_tvlogo"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:src="@drawable/tv_logo" /> -->

    <ImageView
        android:id="@+id/top_bar_tvlogo"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:src="@drawable/tv_logo" />

</RelativeLayout>